<html>
    <head>
        <title>HarborTown</title>
        <style>
         body {
             text-align: center;
         }
         h2 {
             color: red;
         }
         table {
             margin: auto;
             border-collapse: collapse;
         }
         td {
             border: 4px outset #888;
         }
         input[type=number] {
             width: 4em;
         }
         form {
             display: inline;
         }
        </style>
    </head>
    <body>
        <h2>@model.msg</h2>

        <h1>Your Games</h1>
        <table>
            <tr>
                <th>#</th>
                <th>Description</th>
                <th>Players</th>
                <th>Turn</th>
            </tr>
            @model.mygames.forEach((g)=>{
            <tr>
                <td><a href="/game?@g.id">@g.id</a></td>
                <td>@g.desc</td>
                <td>@g.players.map((p)=>{return p.name;}).join(', ')</td>
                @if (g.ended) {
                  <td>Over @model.ago(g.ended).toString().replace(/([0-9]*\.[0-9]).*/,'$1') days ago</td>
                } else {
                  <td>@g.players[g.currentPlayer].name</td>
                }
            </tr>
            })
        </table>
        @if (model.showOld) {
          <a href="?">Hide old games</a>
        } else if (model.clipped) {
          <a href="?showOld=true">Show old games</a>
        }
        

        <h1>Open Games</h1>
        <table>
            <tr>
                <th>#</th>
                <th>Description</th>
                <th>Players</th>
                <th>Wanted</th>
            </tr>
            @model.gameseeds.forEach((x)=>{
            <tr>
                <td>@x.id</td>
                <td>@x.desc</td>
                <td>@x.players.map((x)=>x.name).join(', ')</td>
                <td>@x.wanted</td>
                <td><form action="/join" method="post">
                    <input type="hidden" name="id" value="@x.id">
                    <input type="submit" value="Join">
                </form></td>
            </tr>
            })
            <form action="/new" method="post">
                <tr>
                    <td>?</td>
                    <td><input name="desc"></td>
                    <td></td>
                    <td><input type="number" name="wanted" minimum="1" maximum="5"></td>
                    <td><input type="submit" value="Create"></td>
                </tr>
            </form>
        </table>
        <br/><br/>
        You are logged in as "@model.name" (@model.email).  You can <a href="/login">change this</a>
        <br/><br/>
        <form action="/mkGame" method="post">
            Or specify exact game:<br/>
            <textarea name="state" rows="10" cols="90"></textarea><br/>
            <input type="submit"/>
        </form>
    </body>
</html>
