<html>
    <head>
        <title>Login Required</title>
        <style>
         form {
             width: 36.9em;
             min-height: 22em;
             margin: calc( 50vh - 11em) auto;
             border: 3px #888 outset;
             background: white;
             text-align: center;
             padding: 1em;
         }
         body {
             background: #ccc;
         }
         h3 {
             position: absolute;
             width: 100vw;
             text-align:center;
             color: red;
             top: calc( 25vh - 2em );
             text-shadow: 0 0 2px white;
             font-size: 19pt;
         }
         input.text {
             width: 95%;
             display: block;
             margin: 1em auto;
             margin-top: 0.5em;
         }
         hr {
             margin: 2em auto;
         }
        </style>
    </head>
    <body>
        <div>
            @if (model.trouble) {
              <h3>Something went wrong with your login</h3>
            }
        </div>
        <form method="post" action="/login">
          <h1>Login</h1>
          Email Address
          <input name="email" class="text">
          Password:
          <input name="pass" type="password" class="text">
          <input type="submit" value="Log In">
          <hr>
          Don't have an account here yet?  <a href="register">Register</a>
        </form>
    </body>
</html>
